/* pages/index.wxss */
.container{
  width: 100%;
  padding:16rpx;
  box-sizing:border-box;
}

/* 顶部导航栏 */
.top-bar{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  margin-bottom: 16rpx;
}

.top-bar .title{
  font-size: 20px;
  font-weight: 500;
  color: rgba(51,51,51,1);
}

.top-bar .group-btn{
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: rgba(239,130,0,1);
  border-radius: 8rpx;
  color: #fff;
  font-size: 14px;
}

.top-bar .group-btn:active{
  opacity: 0.8;
}

.top-bar .group-btn .group-icon{
  margin-right: 4rpx;
  font-size: 16px;
}

.top-bar .group-btn .group-text{
  font-size: 14px;
}

textarea{
  width: 100%;
  height:300rpx;
  max-height:300rpx;
  padding: 32rpx;
  font-size:14px;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40upx;
  background:rgba(248,248,248,1);
  border-radius:12rpx;
  box-sizing:border-box;
}

.placeholder-class{
  font-size:14px;
  font-weight:400;
  color:rgba(204,204,204,1);
  line-height:40rpx;
}


/* 分组tab切换 */
.group-tabs{
  margin-bottom: 24rpx;
}

.tabs-scroll{
  white-space: nowrap;
}

.tab-item{
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  margin-right: 16rpx;
  background: rgba(248,248,248,1);
  border-radius: 20rpx;
  font-size: 14px;
  color: rgba(51,51,51,1);
  transition: all 0.3s ease;
}

.tab-item.active{
  background: rgba(239,130,0,1);
  color: #fff;
}

.tab-item:active{
  opacity: 0.8;
}

.tab-color{
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.tab-name{
  font-size: 14px;
}


.image-drag-container{
  padding:32rpx 0;
  box-sizing:border-box;
}

.movable-area{
  width: 100%;
}

.image-choose-container{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  box-sizing:border-box;
}

.image-choose-container > view{
  position: relative;
  width:200rpx;
  height:200rpx;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background:rgba(248,248,248,1);
  border-radius:12rpx;
  box-sizing:border-box;
  overflow: hidden;
}

.image-choose-container  .image-item-temp{
  height: 0;
  background: transparent;
}

.image-choose-container > view image{
  width: 100%;
  height: 100%;
}

.image-choose-container > view .close{
  position: absolute;
  top:0;
  right:0;
  width: 32rpx;
  height: 32rpx;
  font-size: 12rpx;
  text-align: center;
  line-height: 32rpx;
  color:#fff;
  background:rgba(0,0,0,0.4);
  border-radius: 50%;
}

.movable-view{
  border:8rpx solid rgba(239,130,0,1);
  border-radius:12rpx;
  box-sizing:border-box;
}

.movable-view image{
  width: 100%;
  height: 100%;
}

.add-button{
  font-size:32px;
  font-weight:500;
  color:rgba(0,0,0,0.4);
}

button{
  height:88rpx;
  margin-top: 16rpx;
  font-size:16px;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:44upx;
  text-align: center;
  background:rgba(239,130,0,1);
  border-radius:4upx;
  border:none;
  outline:none;
}

button::after{
  border:none;
}


/* 分组管理弹窗 */
.group-modal{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-overlay{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}

.modal-content{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  max-width: 90%;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-sizing: border-box;
}

.modal-title{
  font-size: 18px;
  font-weight: 500;
  color: rgba(51,51,51,1);
  margin-bottom: 32rpx;
  text-align: center;
}

.form-item{
  margin-bottom: 32rpx;
}

.form-item .label{
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: rgba(51,51,51,1);
  margin-bottom: 16rpx;
}

.form-item .input{
  width: 100%;
  padding: 16rpx;
  font-size: 14px;
  border: 1rpx solid rgba(204,204,204,1);
  border-radius: 8rpx;
  box-sizing: border-box;
  outline: none;
}

.form-item .input:focus{
  border-color: rgba(239,130,0,1);
}

.color-picker{
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.color-option{
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.color-dot{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.color-dot:active{
  transform: scale(1.1);
  border-color: rgba(51,51,51,0.3);
}

.color-name{
  font-size: 12rpx;
  color: rgba(102,102,102,1);
}

.selected-color{
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 14rpx;
  color: rgba(102,102,102,1);
}

.selected-color-dot{
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}

.modal-actions{
  display: flex;
  gap: 16rpx;
  margin-top: 40rpx;
}

.modal-actions .action-btn{
  flex: 1;
  height: 72rpx;
  font-size: 16px;
  border-radius: 8rpx;
  border: none;
  outline: none;
}

.modal-actions .cancel-btn{
  background: rgba(248,248,248,1);
  color: rgba(51,51,51,1);
}

.modal-actions .confirm-btn{
  background: rgba(239,130,0,1);
  color: #fff;
}

.modal-actions .action-btn:active{
  opacity: 0.8;
}
